{
  "name": "nuxt-cli",
  "version": "1.0.0",
  "description": "My super-excellent Nuxt.js project",
  "author": "zhuang.li",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "test": "jest",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "format": "prettier --write '{assets,components,config,layouts,middleware,pages,plugins,store,utils}/**/*.{js,json,vue,less}'"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/sitemap": "^1.1.0",
    "cross-env": "^5.2.0",
    "koa": "^2.6.2",
    "less-loader": "^4.1.0",
    "nuxt": "^2.4.0",
    "nuxt-i18n": "^5.8.5",
    "sass-loader": "^7.1.0",
    "body-parser": "^1.19.0"
  },
  "devDependencies": {
    "@nuxtjs/component-cache": "^1.1.4",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "less": "^3.9.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^7.0.0",
    "nodemon": "^1.18.9",
    "prettier": "1.17.0",
    "vue-jest": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
